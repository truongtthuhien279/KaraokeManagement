<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0FFFFFFF"
    android:stretchColumns="*"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtmaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã số"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tên bài hát:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chiến thắng"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lời bài hát"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtloibaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tác giả:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txttacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txttacgia"
            android:textColor="#4CAF50"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="yêu thích:"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnkhongthich"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/unlike" />

            <ImageButton
                android:id="@+id/btnthich"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:backgroundTint="#00000000"
                app:srcCompat="@drawable/love" />
        </FrameLayout>
    </TableRow>
</TableLayout>